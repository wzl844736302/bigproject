<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <wzl.com.wproject.view.SideslipView
            android:id="@+id/sidesl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/mCB_xuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:button="@null"
                        android:drawableTop="@drawable/ck_sel" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/qianbao_shape">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/mSim_shop"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTV_name_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:layout_marginRight="10dp"
                            android:text="11111" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mTV_price_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="111111"
                                android:textColor="#ff0606"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/jian"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/mTV_shu_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:background="#ddd"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="111" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/jia"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ff5e70"
                android:gravity="center">

                <TextView
                    android:id="@+id/mTV_shanchu"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="#ff5e70"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>


        </wzl.com.wproject.view.SideslipView>
    </LinearLayout>


</LinearLayout>
